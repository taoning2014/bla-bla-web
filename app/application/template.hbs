<div class={{if (eq this.lang "zh-hans") "mb-lang--zh-hans"}}>
  {{outlet}}
</div>
{{#if this.showBottomNav}}
  <nav class="bottom-nav nes-container pv-3">
    <div
      class="bottom-nav-content display-flex justify-space-between align-items-center flex-wrap"
    >
      <div>
        {{#if this.call.isHost}}
          {{#if this.call.muted}}
            <button
              type="button"
              class="nes-btn is-warning"
              {{on "click" this.unmute}}
            >
              {{t "application.unmute"}}
            </button>
          {{else}}
            <button
              type="button"
              class="nes-btn is-warning"
              {{on "click" this.mute}}
            >
              {{t "application.mute"}}
            </button>
          {{/if}}
        {{/if}}
        <LinkTo @route="authentication.room" @model={{this.call.roomId}}>
          <button type="button" class="nes-btn is-primary">
            {{t "application.rejoin_room"}}
          </button>
        </LinkTo>
      </div>
      <button
        type="button"
        class="nes-btn"
        {{on "click" this.endCall}}
      >
        {{t "application.leave"}}
      </button>
    </div>
  </nav>
{{/if}}