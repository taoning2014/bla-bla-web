<Layout as |layout|>
  <layout.nav>
    <button
      type="button"
      class="nes-btn is-success"
      {{on "click" (set this "isShowReleaseModal" true)}}
    >
      🎁
    </button>
  </layout.nav>
  <layout.head />
  <layout.body />
</Layout>
{{#if this.isShowReleaseModal}}
  <ModalDialog @translucentOverlay={{true}}>
    <div class="p-4">
      <p class="nes-text">
        Hi dear friends :)
      </p>
      <p>
        Our app has a new release for you today!
      </p>
      <p>
        Here is what have been updated:
      </p>
      <div class="lists">
        <ul class="nes-list is-circle">
          <li>
            聊天室里边的小猫可以讲更多的话啦😃
          </li>
          <li>
            新功能展示（就是现在展现在你前面的页面）🔔
          </li>
          <li>
            网站优化，加载速度更快啦⚡️
          </li>
        </ul>
      </div>
      <div class="mb-4">
        <p class="nes-text is-error">
          Thank you and love from everyone at bla-bla team
        </p>
        <i class="nes-mario"></i>
        <i class="nes-ash"></i>
        <i class="nes-pokeball"></i>
        <i class="nes-kirby"></i>
      </div>
      <button
        type="button"
        class="nes-btn is-success"
        {{on "click" this.closeFeatureModal}}
      >
        Try it out
      </button>
    </div>
  </ModalDialog>
{{/if}}