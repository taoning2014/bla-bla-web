<Layout as |layout|>
  <layout.nav>
    <button
      type="button"
      class="nes-btn is-primary mr-4"
      {{on "click" (set this "isShowReleaseModal" true)}}
    >
      {{t "home.show_modal"}}
    </button>
  </layout.nav>
  <layout.head @talk={{t "home.welcome"}}/>
  <layout.body class="mb-home">
    <a
      class="nes-container is-rounded mb-4"
      href="https://bla-bla.club/talkwithmichael/"
      target="_blank"
      rel="noreferrer noopener"
    >
      <p class="nes-text is-primary">
        {{t "home.title"}}: {{t "home.title_content"}}
      </p>
      <p>
        {{t "home.description"}}: {{t "home.description_content"}}
      </p>
      <Avatar
        @character="tight-fisted"
        @username="Michael"
      >
        <span class="nes-text is-success">
          {{t "home.host"}}
        </span>
      </Avatar>
    </a>
    {{#each this.model.rooms as |room|}}
      <Room @room={{room}} />
    {{/each}}
  </layout.body>
</Layout>
{{#if this.isShowReleaseModal}}
  <ModalDialog @translucentOverlay={{true}}>
    <div class="p-4">
      <p class="nes-text">
        {{t "home.modal.title_1"}}
      </p>
      <p>
        {{t "home.modal.title_2"}}
      </p>
      <p>
        {{t "home.modal.title_3"}}:
      </p>
      <div class="lists">
        <ul class="nes-list is-circle">
          <li class="mb-2">
            {{t "home.modal.feature_1"}}
          </li>
          <li class="mb-2">
            {{t "home.modal.feature_2"}}
          </li>
          <li>
            {{t "home.modal.feature_3"}}
          </li>
        </ul>
      </div>
      <div class="mb-4">
        <p class="nes-text is-error">
          {{t "home.modal.credits"}}
          <i class="nes-icon heart"></i>
        </p>
        <i class="nes-mario"></i>
        <i class="nes-ash"></i>
        <i class="nes-pokeball"></i>
        <i class="nes-kirby"></i>
      </div>
      <button
        type="button"
        class="nes-btn is-success"
        {{on "click" this.closeFeatureModal}}
      >
        {{t "home.modal.try"}}
      </button>
    </div>
    <span class="mb-app-version">
      {{t "home.modal.version"}}:
      {{app-version versionOnly=true}}
      {{t "home.modal.beta"}}
    </span>
  </ModalDialog>
{{/if}}