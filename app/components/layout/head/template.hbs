<div
  class="layout-head display-flex justify-space-between align-items-center flex-wrap pv-2"
>
  <div class="ml-6">
    <p>
      <span class="nes-badge">
        <span class="is-error">
          Title
        </span>
      </span>
      {{this.title}}
    </p>
    <p>
      <span class="nes-badge">
        <span class="is-warning">
          Description
        </span>
      </span>
      {{this.description}}
      <i class="nes-icon heart"></i>
    </p>
  </div>
  <div class="display-flex">
    {{yield}}
    {{#if @roomNotice.notice}}
      <p class="nes-balloon align-self-flex-start">
        <span
          class="nes-text {{@roomNotice.notice.type}}"
        >{{@roomNotice.notice.message}}</span>
      </p>
    {{/if}}
    <i class="nao-nao animate"></i>
  </div>
</div>